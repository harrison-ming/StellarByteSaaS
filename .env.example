# StellarByte - Environment Configuration Template
# Created: 2025-01-13
# Note: Copy this file to .env and fill in your actual values

# ===== Basic Configuration =====
MAIN_URL=http://localhost:4100
FRONTEND_URL=http://localhost:4100
NEXT_PUBLIC_BACKEND_URL=http://localhost:4000
BACKEND_INTERNAL_URL=http://stellarbyte-app:3000

# ===== Database Configuration =====
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://stellarbyte:your_secure_password_here@stellarbyte-postgres:5432/stellarbyte

# ===== Redis Configuration =====
REDIS_URL=redis://stellarbyte-redis:6379

# ===== Security Configuration =====
JWT_SECRET=your_jwt_secret_minimum_32_characters_here

# ===== Storage Configuration =====
STORAGE_PROVIDER=cloudflare
UPLOAD_DIRECTORY=/app/uploads

# ===== Required Configuration =====
IS_GENERAL=true

# ===== Social Platform API Configuration =====
# Apply for API keys from respective platforms and fill in below

# Twitter/X
X_API_KEY=
X_API_SECRET=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Facebook & Instagram
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# YouTube (also used for Google login)
YOUTUBE_CLIENT_ID=your_google_oauth_client_id
YOUTUBE_CLIENT_SECRET=your_google_oauth_client_secret

# TikTok
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=

# Reddit
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# Pinterest
PINTEREST_CLIENT_ID=
PINTEREST_CLIENT_SECRET=

# Threads
THREADS_APP_ID=
THREADS_APP_SECRET=

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Slack
SLACK_ID=
SLACK_SECRET=
SLACK_SIGNING_SECRET=

# ===== OpenAI (Optional, for AI features) =====
OPENAI_API_KEY=

# ===== Cloudflare R2 Storage =====
# Production environment uses R2 for social media avatars and uploaded files
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ACCESS_KEY=your_cloudflare_access_key
CLOUDFLARE_SECRET_ACCESS_KEY=your_cloudflare_secret_access_key
CLOUDFLARE_BUCKETNAME=your_bucket_name
CLOUDFLARE_BUCKET_URL=https://your_account_id.r2.cloudflarestorage.com/your_bucket_name
CLOUDFLARE_REGION=auto

# ===== API Limit Configuration =====
API_LIMIT=30
